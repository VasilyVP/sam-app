{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "target": "ES2022",
        "sourceMap": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "exclude": [
        "node_modules",
        "__tests__"
    ],
    "include": [
        "src/**/*.mts",
        "src/**/*.ts"
    ]
}